public class Sum_of_Natural_Numbers {
	
	static void function(int n) {
		int sum = 0 ;
		for(int i=1; i<=n; i++) {
			
			sum = i+sum;
			System.out.print(i+" ");
			
		}
		System.out.println(" ");
	 System.out.println(sum);
		
	}

	public static void main(String[] args) {
		System.out.print("Enter number : ");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		function(n);
		

	}

}
